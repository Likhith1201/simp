import java.util.*;

class Stack
{
    int size;
    int top;
    int stack[];

    public Stack(int cap)
    {
        this.size = cap;
        this.stack = new int[size];
        this.top = -1;
    }

    boolean isEmpty()
    {
        return top == -1;
    }

    boolean isFull()
    {
        return top == size - 1;
    }

    void push(int val)
    {
        stack[++top] = val;
        System.out.println(val + " is pushed");
    }

    void pop()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty");
            return;
        }
        else
        {
            int val = stack[top--];
            System.out.println(val + " is deleted");
        }
    }

    void peek()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty. No top element.");
            return;
        }
        System.out.println("Top element: " + stack[top]);
    }

    void display()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty");
            return;
        }

        System.out.print("Stack: ");
        for (int i = top; i >= 0; i--)
        {
            System.out.print(stack[i] + " ");
        }
        System.out.println();
    }
}

class Main
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter stack capacity: ");
        int cap = sc.nextInt();

        if (cap <= 0)
        {
            System.out.println("Stack capacity must be greater than 0");
            return;
        }

        Stack stack = new Stack(cap);
        int choice;

        while (true)
        {
            System.out.println("\nStack Operations:");
            System.out.println("1.Push");
            System.out.println("2.Pop");
            System.out.println("3.Peek");
            System.out.println("4.Display");
            System.out.println("5.Exit");

            System.out.print("Enter your choice: ");
            choice = sc.nextInt();

            switch (choice)
            {
                case 1:
                    if (!stack.isFull())
                    {
                        System.out.print("Enter Value: ");
                        int val = sc.nextInt();
                        stack.push(val);
                    }
                    else
                    {
                        System.out.println("Stack is full. Cannot insert");
                    }
                    break;

                case 2:
                    stack.pop();
                    break;

                case 3:
                    stack.peek();
                    break;

                case 4:
                    stack.display();
                    break;

                case 5:
                    System.out.println("Program Terminated");
                    return;

                default:
                    System.out.println("Invalid choice");
            }
        }
    }
}






STACK LINKEDLIST


import java.util.*;

class Node
{
    int data;
    int size;
    Node next;

    Node(int val)
    {
        this.data = val;
        this.next = null;
    }
}

class Stack
{
    Node top = null;
    int count = 0;
    int size;

    Stack(int size)
    {
        this.size = size;
    }

    boolean isEmpty()
    {
        return top == null;
    }

    boolean isFull()
    {
        return count == size;
    }

    void push(int val)
    {
        Node n = new Node(val);
        n.next = top;
        top = n;
        count++;

        System.out.println(val + " is pushed");
        return;
    }

    void pop()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty");
            return;
        }
        else
        {
            int val = top.data;
            top = top.next;
            count--;

            System.out.println(val + " is popped");
            return;
        }
    }

    void peek()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty");
            return;
        }
        System.out.println("Stack top: " + top.data);
    }

    void display()
    {
        if (isEmpty())
        {
            System.out.println("Stack is empty");
            return;
        }

        System.out.println("Stack:");
        Node i = top;

        while (i != null)
        {
            System.out.print(i.data + " ");
            i = i.next;
        }
        return;
    }
}

class Main
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter the stack size: ");
        int size = sc.nextInt();

        Stack stack = new Stack(size);

        while (true)
        {
            System.out.print("\nStack Operations:");
            System.out.print("\n1.Push \n2.Pop \n3.Peek \n4.Display \n5.Exit");
            System.out.print("\nEnter your choice: ");

            int choice = sc.nextInt();

            switch (choice)
            {
                case 1:
                    if (stack.isFull())
                    {
                        System.out.println("Stack is full");
                    }
                    else
                    {
                        System.out.println("Enter value to be inserted: ");
                        int val = sc.nextInt();
                        stack.push(val);
                    }
                    break;

                case 2:
                    stack.pop();
                    break;

                case 3:
                    stack.peek();
                    break;

                case 4:
                    stack.display();
                    break;

                case 5:
                    System.out.println("Program terminated");
                    return;

                default:
                    System.out.println("Invalid choice");
            }
        }
    }
}








REVERSE


import java.util.*;

class Main
{
    static int Reverse(int n)
    {
        Stack<Integer> s = new Stack<Integer>();
        int top = -1;

        while (n > 0)
        {
            s.push(n % 10);
            top++;
            n = n / 10;
        }

        int m = 0;

        for (int i = 0; top != -1; i++)
        {
            int d = s.pop();
            top--;
            m += d * (int) Math.pow(10, i);
        }

        return m;
    }

    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter the number to be reversed: ");
        int n = sc.nextInt();

        int r = Reverse(n);

        System.out.println("Reversed number: " + r);
    }
}





D2B


import java.util.Scanner;

class Main
{
    int s[] = new int[100];
    int top = -1;

    void push(int x)
    {
        s[++top] = x;
        return;
    }

    int pop()
    {
        return s[top--];
    }

    void decimalToBinary(int n)
    {
        if (n == 0)
        {
            System.out.print(0);
            return;
        }

        while (n > 0)
        {
            push(n % 2);
            n = n / 2;
        }

        System.out.print("Binary Number: ");

        while (top != -1)
        {
            System.out.print(pop());
        }
    }

    public static void main(String args[])
    {
        Main obj = new Main();
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter Decimal number: ");
        int n = sc.nextInt();

        obj.decimalToBinary(n);
    }
}






PARANTHESIS


import java.util.*;

class Stack
{
    int size;
    int top;
    char stack[];

    public Stack()
    {
        this.size = 100;
        this.stack = new char[size];
        this.top = -1;
    }

    void push(char val)
    {
        stack[++top] = val;
    }

    void pop()
    {
        top--;
    }

    public String paranthesis(String str)
    {
        int length = str.length();

        for (int i = 0; i < length; i++)
        {
            if (str.charAt(i) == '(')
            {
                push(str.charAt(i));
            }
            else if (str.charAt(i) == ')')
            {
                if (top != -1)
                    pop();
                else
                    return "'(' is missing";
            }
        }

        if (top != -1)
            return "')' is missing";
        else
            return "Perfectly Balanced";
    }
}

class Main
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        Stack s = new Stack();

        System.out.println("Enter the string only in (,): ");
        String str = sc.next();

        System.out.println(s.paranthesis(str));
    }
}





I2P


import java.util.*;

class Main
{
    char s[] = new char[50];
    int top = -1;

    void push(char x)
    {
        s[++top] = x;
    }

    char pop()
    {
        return s[top--];
    }

    String convert(String in)
    {
        String post = "";

        for (int i = 0; i < in.length(); i++)
        {
            char ch = in.charAt(i);

            if (Character.isLetter(ch))
            {
                post = post + ch;
            }
            else
            {
                if (top == -1)
                {
                    push(ch);
                }
                else
                {
                    while (top != -1 &&
                          !((ch == '*' || ch == '/') &&
                            (s[top] == '+' || s[top] == '-')))
                    {
                        post += pop();
                    }
                    push(ch);
                }
            }
        }

        while (top != -1)
        {
            post += pop();
        }

        return post;
    }

    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        Main obj = new Main();

        System.out.print("Enter infix expression: ");
        String in = sc.nextLine();

        String postfix = obj.convert(in);
        System.out.println("Postfix expression: " + postfix);
    }
}






POSTFIX EVAL



import java.util.*;

class Main
{
    int s[] = new int[50];
    int top = -1;

    void push(int x)
    {
        s[++top] = x;
    }

    int pop()
    {
        return s[top--];
    }

    int expEvaluation(String post)
    {
        for (int i = 0; i < post.length(); i++)
        {
            char ch = post.charAt(i);

            if (Character.isDigit(ch))
            {
                push(ch - '0');
            }
            else
            {
                if (top < 1)
                {
                    System.out.println("Invalid postfix expression");
                    return -1;
                }

                int b = pop();
                int a = pop();

                switch (ch)
                {
                    case '+':
                        push(a + b);
                        break;

                    case '-':
                        push(a - b);
                        break;

                    case '*':
                        push(a * b);
                        break;

                    case '/':
                        push(a / b);
                        break;
                }
            }
        }

        if (top != 0)
        {
            System.out.println("Invalid postfix expression");
            return -1;
        }

        return s[top];
    }

    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        Main obj = new Main();

        System.out.print("Enter expression: ");
        String exp = sc.nextLine();

        int n = obj.expEvaluation(exp);

        if (n != -1)
            System.out.println("Postfix evaluated result: " + n);
    }
}
